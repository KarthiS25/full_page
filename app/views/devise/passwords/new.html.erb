<%= stylesheet_link_tag "devise", "data-turbo-track": "reload"%>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <% if resource.errors.any? %>
  <div id="error_explanation">
    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
	<div class="container-fluid">
		<div class="row main-content bg-success text-center">
			<div class="col-md-4 text-center company__info">
				<span class="company__logo"><h2><span class="fa fa-android"></span></h2></span>
				<img src="/spritle_logo.png" width="150">
			</div>
			<div class="col-md-8 col-xs-12 col-sm-12 login_form ">
				<div class="container-fluid">
					<div class="row">
						<h2>Forgot your password?</h2>
					</div>
					<div class="row">
						<form control="" class="form-group">
							<div class="row">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form__input", placeholder: "Email" %>
              </div>
							
							<div class="row">
								<%# <input type="checkbox" name="remember_me" id="remember_me" class=""> %>
                <% if devise_mapping.rememberable? %>
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                <% end %>
								<%# <label for="remember_me">Remember Me!</label> %>
							</div>
							<div class="row">
								<%# <input type="submit" value="Submit" class="btn" > %>
                <br><%= f.submit "Reset password" %>
							</div>
              <div class="row">
								<%# <input type="submit" value="Submit" class="btn" > %>
                <br><%= link_to 'Back to Sign in', user_session_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
							</div>
						</form>
					</div>
					<div class="row">
            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
						  <p>Don't have an account?  <%= link_to "Register Here", new_registration_path(resource_name) %></p>
            <% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
	<% end %>
<%= render "devise/shared/links" %>




